<div class="card shadow" style="min-width: 250px;">
    <div class="card-body d-flex flex-column">

        <img class="card-img mt-auto {{imageClasses}}" src="{{imageSrc}}" alt="{{title}}">

        <h4 class="card-title mt-auto i18n i18n-general-cards-card_{{id}}-title"></h4>

        <p class="card-text i18n i18n-general-cards-card_{{id}}-text">
        </p>

        {{#if link}}
        <a href="{{link}}" class="btn btn-primary mt-auto mr-auto ml-auto i18n i18n-general-button-read_more "></a>
        {{/if}}

    </div>

    <div class="card-footer">
        <span>
            <strong class="i18n i18n-general-cards-states-{{state}}"></strong>
        </span>
    </div>
</div>